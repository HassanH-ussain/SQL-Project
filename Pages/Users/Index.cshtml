@page
@model LoveSync.Pages.Users.IndexModel
@{
}
<br>
<h2>Please select your user</h2>
<h1>If you have not registered, register please</h1>
<a class='btn btn-primary btn-sm' href="/Users/Create">Register</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Biography</th>
            <th>Interest</th>
            <th>Age</th>
            <th>Created At</th>
            <th>Login</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.listUsers)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.email</td>
                <td>@item.phone</td>
                <td>@item.address</td>
                <td>@item.biography</td>
                <td>@item.interest</td>
                <td>@item.age</td>
                <td>@item.created_at</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Users/Edit?id=@item.id">Login</a> 
                </td>
            </tr>
        }
    </tbody>
</table>